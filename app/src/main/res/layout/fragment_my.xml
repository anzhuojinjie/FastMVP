<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.joey.loanmarket.widget.CustomToolBar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="vertical"
        app:right_btn_src="@mipmap/ic_msg"
        app:right_btn_visible="true"
        app:title_text="个人中心"
        app:title_visible="true"
        tools:context=".ui.test.activity.TestActivity" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/ll_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:background="@color/bg_toolbar">
                    <ImageView
                        android:id="@+id/my_iv_head"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"/>
                    <LinearLayout
                        android:id="@+id/ll_my_login"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:text="我是一号"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:text="15866668888"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_my_logout"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp">
                        <TextView
                            android:id="@+id/mt_tv_login"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:text="登录"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                        <View
                            android:layout_width="2dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:layout_margin="20dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:text="注册"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="申请记录"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_apply_record"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/global_line_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="我的资料"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_my_info"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/global_line_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="消息中心"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_message_center"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/global_line_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="帮助"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_help"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="关注公众号"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_wx"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/global_line_color"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="邀请好友"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_share"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:background="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/text_color_input"
                    android:text="设置"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:drawableLeft="@mipmap/icon_settings"
                    android:drawableRight="@mipmap/icon_arrow"
                    android:drawablePadding="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/white"/>

            </LinearLayout>
        </ScrollView>
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


</LinearLayout>
